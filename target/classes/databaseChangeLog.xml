<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
   http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="someIds" author="ruslan">
        <createTable tableName="characters">
                <column autoIncrement="true" name="character_id" type="serial">
                        <constraints primaryKey="true"/>
                </column>
        </createTable>
        <createTable tableName="comics">
            <column autoIncrement="true" name="comics_id" type="serial">
                <constraints primaryKey="true"/>
            </column>
        </createTable>

        <addColumn tableName="characters">
            <column name="name" type="varchar(255)"/>
            <column name="description" type="varchar(255)"/>
            <column name="path" type="varchar(255)"/>
            <column name="extension" type="varchar(255)"/>
            <column name="comics_id" type="integer">
                <constraints foreignKeyName="FK_characters_comics" referencedTableName="comics" referencedColumnNames="comics_id"/>
            </column>
        </addColumn>

        <addColumn tableName="comics">
            <column name="title" type="varchar(255)"/>
            <column name="character_id" type="integer">
                <constraints foreignKeyName="FK_comics_characters" referencedTableName="characters" referencedColumnNames="character_id"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>